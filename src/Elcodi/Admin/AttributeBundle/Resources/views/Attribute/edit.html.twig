{% extends 'AdminCoreBundle::layout.html.twig' %}


{% set elcodi_context = {
    entity_type: 'attribute',
} %}


{% block breadcrumb %}

    {% set title = 'admin.attribute.plural'|trans %}

    {% if attribute.id %}
        {% set header = 'admin.attribute.edit'|trans({ '%name%': attribute.name }) %}
    {% else %}
        {% set header = 'admin.attribute.new'|trans %}
    {% endif %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: 'admin.categorization.single'|trans, active: false },
            { name: title, url: path('admin_attribute_list'), },
            { name: header, 'active' : true, },
        ]
    } %}

{% endblock breadcrumb %}


{% block content %}

    {% if attribute.id %}
        {{
            render(
                path('admin_attribute_edit_component', {
                    id: attribute.id,
                })
            )
        }}
    {% else %}
        {{
            render(
                path('admin_attribute_new_component')
            )
        }}
    {% endif %}

{% endblock content %}
