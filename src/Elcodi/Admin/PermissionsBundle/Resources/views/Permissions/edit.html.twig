{% extends 'AdminCoreBundle::layout.html.twig' %}


{% set elcodi_context = {
    entity_type: 'permission_group',
} %}


{% block breadcrumb %}

    {% set title = 'admin.permissions.plural'|trans %}

    {% if permissionGroup.id %}
        {% set header = 'admin.permissions.edit'|trans({ '%name%': permissionGroup.name }) %}
    {% else %}
        {% set header = 'admin.permissions.new'|trans %}
    {% endif %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: title, url: path('admin_permissions_list') },
            { name: header, active: true },
        ]
    } %}
{% endblock breadcrumb %}


{% block content %}

    {% if permissionGroup.id %}
        {{ render(path('admin_permissions_edit_component', { id: permissionGroup.id })) }}
    {% else %}
        {{ render(path('admin_permissions_new_component')) }}
    {% endif %}

{% endblock content %}
