{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% set elcodi_context = {
    entity_type: 'permission_group'
} %}


{% block title 'admin.permissions.list'|trans %}


{% block no_items
    lists.no_items(
        'admin.permissions.single'|trans,
        'admin.permissions.plural'|trans
    )
%}

{% block table_head %}

    {% include '@AdminCore/Tables/head.html.twig' with {
        rows: [
            { name: 'admin.permissions.field.name.title'|trans },
            { name: 'admin.permissions.field.user.title'|trans },
        ],
        class: 'permission_group',
    } %}

{% endblock table_head %}


{% block table_body_row %}

    <td>
        <a href="{{ path('admin_permissions_edit', { id: entity.id }) }}">
            <strong>{{ entity.name }}</strong>
        </a>
    </td>
    <td>
        <a href="{{ path('admin_permissions_edit', { id: entity.id }) }}">
            <strong>{{ "#{entity.adminUser.firstname} #{entity.adminUser.lastname}" }}</strong>
        </a>
    </td>

    {% include '@AdminCore/Tables/actions.html.twig' with {
        entity: entity,
        class: 'permission_group',
    } %}

{% endblock table_body_row %}


{% block table_paginator_links %}

    {% set url = 'admin_permissions_list' %}
    {{ parent() }}

{% endblock table_paginator_links %}
