{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}
{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}
{% set elcodi_context = {
    entity_type: 'coupon_campaign'
} %}
{% block content %}
    {% set formAction = couponCampaign.id
        ? path('admin_coupon_campaign_update', {id: couponCampaign.id})
        : path('admin_coupon_campaign_save') %}
    {{ form_start(form, { action: formAction }) }}
    <fieldset>
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none mb-n pb-m">
                    <h3 class="fw-n">{{ 'admin.coupon_campaign.section.nontranslatable.title'|trans }}</h3>
                    <p>{{ 'admin.coupon_campaign.section.nontranslatable.description'|trans }}</p>
                </div>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            {{
                                    form_row(form.campaign_name, {
                                        label: 'admin.coupon_campaign.field.campaign_name.title',
                                        attr: {
                                            placeholder: 'admin.coupon_campaign.field.campaign_name.placeholder',
                                        }
                                    })
                                }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="grid fixed-bottom animated fade-in-up">
        <div class="col-1-3">
            &nbsp;
        </div>
        <div class="col-2-3">
            <button type="submit" class="button-primary button-fat pv-s mr-l" id="submit-page">{{ 'ui.forms.save'|trans }}</button>
            <a href="{{ path('admin_coupon_campaign_list') }}">{{ 'ui.forms.cancel'|trans }}</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock content %}