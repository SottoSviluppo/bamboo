{% extends 'AdminCoreBundle::layout.html.twig' %}
{% set elcodi_context = {
    entity_type: 'coupon_campaign'
} %}
{% block breadcrumb %}
    {% set title = 'admin.coupon_campaign.plural' | trans %}
    {% set header = couponCampaign.id
        ? 'admin.coupon_campaign.edit' | trans({'%name%': couponCampaign.title})
        : 'admin.coupon_campaign.new' | trans %}
    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb : [
            {
                name: 'admin.plugin.single' | trans,
                active: false
            }, {
                name: title,
                url: url('admin_coupon_campaign_list')
            }, {
                name: header,
                active: true
            }
        ]
    } %}
{% endblock breadcrumb %}
{% block content %}
    {% if couponCampaign.id %}
        {{
            render(url('admin_coupon_campaign_edit_component', {
                id: couponCampaign.id,
            }))
        }}
    {% else %}
        {{ render(url('admin_coupon_campaign_new_component')) }}
    {% endif %}
{% endblock content %}