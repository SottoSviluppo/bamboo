{% extends 'AdminCoreBundle::layout.html.twig' %}
{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}



{% block breadcrumb %}

    {% set title = 'admin.coupon.plural'|trans %}
    {% set header = 'Generazione coupons' %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: title, url: url('admin_coupon_list') },
            { name: header, active: true },
        ]
    } %}
{% endblock breadcrumb %}


{% block content %}

    {% set formAction = url('admin_coupon_generation_elaborate') %}

    {{ form_start(form, { action: formAction }) }}
    <fieldset >
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">{{ 'admin.coupon.section.basic.title'|trans }}</h3>
                    
                </div>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            {{
                                    form_row(form.coupon_campaign, {
                                        label: 'admin.coupon.field.coupon_campaign.title',
                                        attr: {
                                            placeholder: 'admin.coupon.field.coupon_campaign.placeholder',
                                        }
                                    })
                                }}
                        </li>
                        <li>
                            {{
                                form_row(form.color, {
                                    label: 'admin.coupon.field.color.title',
                                    attr: { placeholder: 'admin.coupon.field.color.placeholder' }
                                })
                            }}
                        </li>
                        <li >
                            {{ form_row(form.count, { label: 'Numero di coupons' }) }}
                        </li>
                        <li >
                            {{ form_row(form.chars, { label: 'Numero di caratteri' }) }}
                        </li>

                    </ol>                
                    <ol>
                        <li>
                            {{
                            form_row(form.stackable, {
                                label: 'admin.coupon.field.stackable.title',
                            })
                            }}
                        </li>
                    </ol>
                    <ol>
                        <li>
                            {{
                            form_row(form.free_shipping, {
                                label: 'admin.coupon.field.free_shipping.title',
                            })
                            }}
                        </li>
                    </ol>

                </div>
            </div>
        </div>
        
        <div id="fixed-amount" class="grid">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">{{ 'admin.coupon.section.fixed_amount.title'|trans }}</h3>
                    <p>{{ 'admin.coupon.section.fixed_amount.description'|trans }}</p>
                </div>
            </div>
           <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            {{ form_row(form.price, { label: 'admin.coupon.field.price.title' }) }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="grid o-v">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">{{ 'admin.coupon.section.validity.title'|trans }}</h3>
                    <p>{{ 'admin.coupon.section.validity.description'|trans }}</p>
                </div>
            </div>
            <div class="col-2-3 o-v">
                <div class="box o-v">
                    <h5>{{ 'admin.coupon.field.datetime.title'|trans }}</h5>
                    <ol class="grid">
                        <li class="col-1-2 date-hour o-v">
                            {{ form_row(form.validFrom, { label: 'admin.coupon.field.valid_from.title' }) }}
                        </li>
                        <li  class="col-1-2 date-hour">
                            {{ form_row(form.validTo, { label: 'admin.coupon.field.valid_to.title' }) }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="grid fixed-bottom animated fade-in-up">
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button type="submit" class="button-primary button-fat pv-s mr-l">{{ 'ui.forms.save'|trans }}</button>
                <a href="{{ path('admin_coupon_list') }}" id="cancel-button">{{ 'ui.forms.cancel'|trans }}</a>
            </div>
        </div>
    </fieldset>
    {{ form_end(form) }}
{% endblock content %}
